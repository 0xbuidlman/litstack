use Lit\Crud\CrudShow;
use Lit\Crud\Config\FormConfig;
use LitApp\Controllers\Form\DummyCollection\DummyController;

class DummyConfigClassName extends FormConfig
{
    /**
     * Controller class.
     *
     * @var string
     */
    public $controller = DummyController::class;

    /**
     * Form route prefix.
     *
     * @return string
     */
    public function routePrefix()
    {
        return "DummyCRouteName/DummyFormRouteName";
    }

    /**
     * Form singular name. This name will be displayed in the navigation.
     *
     * @return array
     */
