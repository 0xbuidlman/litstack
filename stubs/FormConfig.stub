    {
        return [
            'singular' => DummyFormName,
        ];
    }

    /**
     * Setup create and edit form.
     *
     * @param \Lit\Crud\CrudShow $page
     * @return void
     */
    public function show(CrudShow $page)
    {
        $page->card(function($form) {

            $form->input('text')->title('text');

            // ...
        });
    }
}
